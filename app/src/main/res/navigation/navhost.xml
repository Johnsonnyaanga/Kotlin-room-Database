<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navhost"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/add2"
        android:name="com.example.ktapp.Add"
        android:label="ADD USER"
        tools:layout="@layout/add_user" >
        <action
            android:id="@+id/tolistfragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.ktapp.ListFragment"
        android:label="LIST"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/toaddfragment"
            app:destination="@id/add2" />
        <action
            android:id="@+id/listFragment_to_updatefragment"
            app:destination="@id/updatefragment" />
    </fragment>
    <fragment
        android:id="@+id/updatefragment"
        android:name="com.example.ktapp.updatefragment"
        android:label="UPDATE USER"
        tools:layout="@layout/fragment_updatefragment" >
        <action
            android:id="@+id/update_to_listfragment"
            app:destination="@id/listFragment" />
        <argument
            android:name="currentUser"
            app:argType="com.example.ktapp.User" />
    </fragment>
</navigation>